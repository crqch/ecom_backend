model Seller{
  id String @id @default(cuid())
  firstName String @map("first_name")
  LastName String @map("last_name")
  email String @unique
  products Product[]
}

model Product {
  id String @id @default(cuid())
  sellerId String
  name String
  price Float
  description String?
  imageUrl String
  category String
  seller Seller @relation(fields: [sellerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}